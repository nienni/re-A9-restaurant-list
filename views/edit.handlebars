<form action="/restaurants/{{{restaurant._id}}}/edit?_method=PUT" method="POST">

  <div class="container">
    <div class="row">
      <div class="col-12 col-md-10 mx-auto">

        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default">餐廳名稱</span>
          </div>
          <input type="text" class="form-control" aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-default" placeholder="{{{restaurant.name}}}" name="name"
            value="{{{restaurant.name}}}">
        </div>

        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default">類別</span>
          </div>
          <input type="text" class="form-control" aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-default" placeholder="{{{restaurant.category}}}" name="category"
            value="{{{restaurant.category}}}">
        </div>

        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default">地址</span>
          </div>
          <input type="text" class="form-control" aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-default" placeholder="{{{restaurant.location}}}" name="location"
            value="{{{restaurant.location}}}">
        </div>

        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default">Google Map連結</span>
          </div>
          <input type="text" class="form-control" aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-default" placeholder="{{{restaurant.google_map}}}" name="google_map"
            value="{{{restaurant.google_map}}}">
        </div>

        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default">電話</span>
          </div>
          <input type="text" class="form-control" aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-default" placeholder="{{{restaurant.phone}}}" name="phone"
            value="{{{restaurant.phone}}}">
        </div>

        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default">餐廳描述</span>
          </div>
          <input type="text" class="form-control" aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-default" placeholder="{{{restaurant.description}}}" name="description"
            value="{{{restaurant.description}}}">
        </div>

        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default">餐廳照片連結</span>
          </div>
          <input type="text" class="form-control" aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-default" placeholder="{{{restaurant.image}}}" name="image"
            value="{{{restaurant.image}}}">
        </div>


        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default">評分</span>
          </div>
          <input type="text" class="form-control" aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-default" placeholder="{{{restaurant.rating}}}" name="rating"
            value="{{{restaurant.rating}}}">
        </div>

      </div>
    </div>
  </div>
  <button type="submit" class="btn btn-outline-success float-right">修改完成</button>
</form>