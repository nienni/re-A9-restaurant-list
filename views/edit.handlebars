<form action="/restaurants/{{{restaurant._id}}}/edit?_method=PUT" method="POST">
  <h1 class="mb-1 restaurant-show-title"><input type="text" placeholder="{{{restaurant.name}}}" name="name"
      value="{{{restaurant.name}}}"></h1>
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-10 mx-auto">

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            類別：
          </span>
          <input type="text" placeholder="{{{restaurant.category}}}" name="category" value="{{{restaurant.category}}}">
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-map-marker-alt pr-2"></i>
            地址：
          </span>
          <input type="text" placeholder="{{{restaurant.location}}}" name="location" value="{{{restaurant.location}}}">
          <input type="text" placeholder="{{{restaurant.google_map}}}" name="google_map"
            value="{{{restaurant.google_map}}}">
          <a href="#" class="text-secondary" target="_blank">
            <i class="fas fa-location-arrow pr-2 fa-xs"></i>
          </a>
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i>
            電話：
          </span>
          <input type="text" placeholder="{{{restaurant.phone}}}" name="phone" value="{{{restaurant.phone}}}">
        </p>

        <p class="mb-5">
          <input type="text" placeholder="{{{restaurant.description}}}" name="description"
            value="{{{restaurant.description}}}">
        </p>

        <img class="rounded mx-auto d-block mb-4 w-100" src="{{{restaurant.image}}}" alt="#" style="max-width: 200px;">
        <input type="text" placeholder="{{{restaurant.image}}}" name="image" value="{{{restaurant.image}}}">

        <input type="text" placeholder="{{{restaurant.rating}}}" name="rating" value="{{{restaurant.rating}}}">


      </div>
    </div>
  </div>
  <button type="submit">修改完成</button>
</form>