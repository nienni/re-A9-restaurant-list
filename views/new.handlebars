<form action="/restaurants" method="POST">
  <h1 class="mb-1 restaurant-show-title"><input type="text" placeholder="請輸入餐廳名稱（必填）" name="name"></h1>
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-10 mx-auto">

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            類別：
          </span>
          <input type="text" placeholder="請輸入餐廳類別(必填）" name="category">
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-map-marker-alt pr-2"></i>
            地址：
          </span>
          <input type="text" placeholder="請輸入餐廳地址(必填）" name="location">
          <input type="text" placeholder="請提供googlemap連結" name="google_map">
          <a href="#" class="text-secondary" target="_blank">
            <i class="fas fa-location-arrow pr-2 fa-xs"></i>
          </a>
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i>
            電話：
          </span>
          <input type="text" placeholder="請輸入餐廳電話(必填）" name="phone">
        </p>

        <p class="mb-5">
          <input type="text" placeholder="請輸入餐廳描述(必填）" name="description">
        </p>

        <img class="rounded mx-auto d-block mb-4 w-100"
          src="https://previews.123rf.com/images/koltukovalek/koltukovalek1611/koltukovalek161100002/68038278-question-mark-sign-colored-icon-help-colorful-symbol-faq-sign-vector-facet-logo-.jpg"
          alt="#" style="max-width: 200px;">
        <input type="text" placeholder="請提供餐廳圖片連結" name="image">

        <input type="text" placeholder="請輸入餐廳評分（0-5分）必填" name="rating">


      </div>
    </div>
  </div>
  <button type="submit">新增餐廳</button>
</form>